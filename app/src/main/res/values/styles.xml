<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorButtonNormal</item>
    </style>

    <style name="style_radio_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textSize">@dimen/text_radioButton</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorRadioButton</item>
    </style>

    <style name="style_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_app</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">@color/colorTextApp</item>
    </style>

    <style name="style_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/text_button</item>
        <item name="android:textColor">@color/colorTextRadioButton</item>
    </style>

    <style name="style_checkBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_app</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">@color/colorTextApp</item>
    </style>

    <style name="style_radio_group">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

</resources>
